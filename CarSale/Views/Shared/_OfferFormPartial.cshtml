@model OfferFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-control">
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
                <span asp-validation-for="BrandId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModelId"></label>
                <select asp-for="CarModelId" class="form-control">
                    @foreach (var carModel in Model.CarModels)
                    {
                        <option value="@carModel.Id">@carModel.Name</option>
                    }
                </select>
                <span asp-validation-for="CarModelId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsePower"></label>
                <input asp-for="HorsePower" class="form-control" placeholder="HP...">
                <span asp-validation-for="HorsePower" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelId"></label>
                <select asp-for="FuelId" class="form-control">
                    @foreach (var fuel in Model.Fuels)
                    {
                        <option value="@fuel.Id">@fuel.Name</option>
                    }
                </select>
                <span asp-validation-for="FuelId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransmissionId"></label>
                <select asp-for="TransmissionId" class="form-control">
                    @foreach (var transmission in Model.Transmissions)
                    {
                        <option value="@transmission.Id">@transmission.Name</option>
                    }
                </select>
                <span asp-validation-for="TransmissionId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarTypeId"></label>
                <select asp-for="CarTypeId" class="form-control">
                    @foreach (var carType in Model.CarTypes)
                    {
                        <option value="@carType.Id">@carType.Name</option>
                    }
                </select>
                <span asp-validation-for="CarTypeId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorId"></label>
                <select asp-for="ColorId" class="form-control">
                    @foreach (var color in Model.Colors)
                    {
                        <option value="@color.Id">@color.Name</option>
                    }
                </select>
                <span asp-validation-for="ColorId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId"></label>
                <select asp-for="CityId" class="form-control">
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
                <span asp-validation-for="CityId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="Year...">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milage"></label>
                <input asp-for="Milage" class="form-control" placeholder="Milage...">
                <span asp-validation-for="Milage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your image URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

