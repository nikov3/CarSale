@model CarSale.Data.Models.Offer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DealerId" class="control-label"></label>
                <select asp-for="DealerId" class ="form-control" asp-items="ViewBag.DealerId"></select>
            </div>
            <div class="form-group">

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        CarBrand
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                    </ul>
                </div>


                <label for="BrandId">Brand</label>
                @Html.DropDownList("Brand", null, htmlAttributes: new { @class = "form-control" })
                
                <label for="FuelId">Fuel</label>
                @Html.DropDownList("Fuel", null, htmlAttributes: new { @class = "form-control" })
                
                <label for="TransmissionId">Transmission</label>
                @Html.DropDownList("Transmission", null, htmlAttributes: new { @class = "form-control" })
				
                <label for="CarModelId">Model</label>
                @Html.DropDownList("CarModel", null, htmlAttributes: new { @class = "form-control" })

                <label asp-for="Brand" class="control-label"></label>
                <select asp-for="Brand" class ="form-control" asp-items="ViewBag.Brand"></select>
            </div>
            <div class="form-group">
                <label asp-for="FuelId" class="control-label"></label>
                <select asp-for="FuelId" class ="form-control" asp-items="ViewBag.FuelId"></select>
            </div>
            @*
            <div class="form-group">
                <label asp-for="TransmissionId" class="control-label"></label>
                <select asp-for="TransmissionId" class ="form-control" asp-items="ViewBag.TransmissionId"></select>
			</div>*@
            <div class="form-group">
                <label asp-for="CarTypeId" class="control-label"></label>
                <select asp-for="CarTypeId" class ="form-control" asp-items="ViewBag.CarTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                <select asp-for="ColorId" class ="form-control" asp-items="ViewBag.ColorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class ="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milage" class="control-label"></label>
                <input asp-for="Milage" class="form-control" />
                <span asp-validation-for="Milage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
