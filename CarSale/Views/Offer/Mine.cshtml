@model IEnumerable<OfferServiceModel>
@{
    ViewBag.Title = "My Offers";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (Model.Any() == false)
{
    <h3 class="text-center">You have no offers!</h3>
}

<div class="row">
    @foreach (var offer in Model)
    {
        <partial name="_OfferPartial" model="@offer" />
    }
</div>
