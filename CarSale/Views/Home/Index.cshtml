@*@model IndexViewModel*@
@model IEnumerable<OfferIndexServiceModel>
@{
    ViewData["Title"] = "Home Page";
    var offers = Model.ToList();
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<a class="btn btn-primary" href="@Url.Action("Create", "Offer")">Go to Create Page</a>
<a class="btn btn-primary" href="@Url.Action("Create", "Offer")">Create Car Offer</a>

﻿<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .header {
        background-color: #343a40;
        padding: 20px;
        color: #fff;
        text-align: center;
    }

        .header h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 18px;
            margin-bottom: 0;
        }

    .content {
        text-align: center;
        margin-top: 100px;
    }

        .content h2 {
            font-size: 32px;
            margin-bottom: 20px;
        }

        .content p {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        .content .btn {
            font-size: 18px;
            font-weight: bold;
            padding: 12px 30px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .content .btn:hover {
                background-color: #4CAF70;
            }
</style>

<div class="header">
    <div class="container">
        <h1>Car Finder</h1>
        <p>Find Your Dream Car</p>
    </div>
</div>

<div class="content">
    <div class="container">
        <h2>Discover Opportunities</h2>
        <p>Explore a wide range of job openings and unlock your career potential.</p>
        <a class="btn" href="/Job/Explore">Explore Jobs</a>
    </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < offers.Count(); i++)
        {
            var offer = offers[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@offer.ImageUrl" alt="@offer.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Offer" asp-action="Details" asp-route-id="@offer.Id" > @offer.Title</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

